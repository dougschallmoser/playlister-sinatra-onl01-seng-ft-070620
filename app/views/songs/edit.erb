
<form method="POST" action="/songs/<%= @song.slug %>">
    <input type="hidden" id="hidden" name="_method" value="PATCH">
    <label for=song_name">Song Name:</label>
    <input type="text" id="Name" name="song[name]" value="<%= @song.name %>">
    <br>
    <label for=artist_name">Artist Name:</label>
    <input type="text" id="Artist Name" name="artist[name]" value="<%= @song.artist.name %>">
    </p>

    <h3>Genre(s):</h3>
    <% @genres.each do |genre| %>
    <input type="checkbox" id="<%= genre.name %>" name="genres[]" value="<%= genre.id %>" <%= 'checked' if @song.genres.include?(genre) %>><%= genre.name %>
    <% end %>
    <br>
    <p>
    <p><input type="submit" value="Save"></p>
</form